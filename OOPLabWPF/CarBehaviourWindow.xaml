<Window x:Class="OOPLabWPF.CarBehaviourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOPLabWPF"
        mc:Ignorable="d"
        Title="CarBehaviourWindow" Height="412" Width="788" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Icon="/Icon/car-icon-png-4272.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="303*"/>
            <ColumnDefinition Width="421*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Car info" Margin="10,0,2,8" Grid.Row="1" Grid.ColumnSpan="2">
            <Grid>
                <Label Content="MarkAndModel:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox x:Name="Mark_TextBox" HorizontalAlignment="Left" Margin="95,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" IsEnabled="False"/>
                <Label Content="Color:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,25,0,0"/>
                <TextBox x:Name="Color_TextBox" HorizontalAlignment="Left" Margin="47,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                <Label Content="HP:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,51,0,0"/>
                <TextBox x:Name="HP_TextBox" HorizontalAlignment="Left" Margin="47,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                <Label Content="Weight:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,77,0,0"/>
                <TextBox x:Name="Weight_TextBox" HorizontalAlignment="Left" Margin="48,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                <Label Content="Milage:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,103,0,0"/>
                <TextBox x:Name="Milage_TextBox" HorizontalAlignment="Left" Margin="48,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                <Label Content="Fuel consumption (per 100km):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,129,0,0"/>
                <TextBox x:Name="FuelConsumption_TextBox" HorizontalAlignment="Left" Margin="174,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="76" IsEnabled="False"/>
                <Label Content="Fuel capacity:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,156,0,0"/>
                <TextBox x:Name="FuelCapacity_TextBox" HorizontalAlignment="Left" Margin="81,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                <Label Content="Production date:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,208,0,0"/>
                <TextBox x:Name="ProductionDate_TextBox" HorizontalAlignment="Left" Margin="100,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                <Label Content="Doors:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,234,0,0"/>
                <TextBox x:Name="Doors_TextBox" HorizontalAlignment="Left" Margin="50,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                <Label Content="Current fuel:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,183,0,0"/>
                <TextBox x:Name="CurrentFuel_TextBox" HorizontalAlignment="Left" Margin="78,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                <Label Content="Max speed:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,260,0,0"/>
                <TextBox x:Name="MaxSpeed_TextBox" HorizontalAlignment="Left" Margin="72,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                <Label Content="Current speed:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,286,0,0"/>
                <TextBox x:Name="CurrentSpeed_TextBox" HorizontalAlignment="Left" Margin="89,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>

            </Grid>
        </GroupBox>
        <GroupBox Header="Car interaction" Margin="3,0,7,8" Grid.Row="1" Grid.Column="2">
            <Grid>
                <Button x:Name="Start_Button" Grid.Column="2" Content="Start car" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Height="32" Width="102" Click="Start_Button_Click"/>
                <Button x:Name="Stop_Button" Grid.Column="2" Content="Stop car" HorizontalAlignment="Left" Margin="117,10,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Height="32" Width="102" Click="Stop_Button_Click"/>
                <Button x:Name="SpeedUp_Button" Grid.Column="2" Content="SpeedUp()" HorizontalAlignment="Left" Margin="10,71,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Height="32" Width="74" Click="SpeedUp_Button_Click"/>
                <Button x:Name="SpeedUpX_Button" Grid.Column="2" Content="SpeedUp(X)" HorizontalAlignment="Left" Margin="90,108,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Height="32" Width="74" Click="SpeedUpX_Button_Click"/>
                <TextBox x:Name="SpeedUpX_TextBox" Grid.Column="2" HorizontalAlignment="Left" Margin="10,108,0,0" Grid.RowSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" Height="32" PreviewTextInput="TextBox_PreviewTextInput"/>
                <Button x:Name="SpeedUpXTurbo_Button" Grid.Column="2" Content="SpeedUp(X, bool)" HorizontalAlignment="Left" Margin="90,145,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Height="32" Width="108" Click="SpeedUpXTurbo_Button_Click"/>
                <TextBox x:Name="SpeedUpXTurbo_TextBox" Grid.Column="2" HorizontalAlignment="Left" Margin="10,145,0,0" Grid.RowSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" Height="32"/>
                <CheckBox x:Name="TurboCheckBox" Grid.Column="2" Content="Turbo Boost" HorizontalAlignment="Left" Margin="202,154,0,0" Grid.RowSpan="2" VerticalAlignment="Top" RenderTransformOrigin="0.421,0.577" Height="15" Width="85"/>
                <Rectangle Grid.Column="2" HorizontalAlignment="Left" Height="1" Margin="10,56,0,0" Grid.RowSpan="2" Stroke="#FF9E9D9D" VerticalAlignment="Top" Width="402"/>
                <Button x:Name="SlowDown_Button" Grid.Column="2" Content="SlowDown(X)" HorizontalAlignment="Left" Margin="90,184,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Height="32" Width="74" Click="SlowDown_Button_Click"/>
                <TextBox x:Name="SlowDown_TextBox" Grid.Column="2" HorizontalAlignment="Left" Margin="10,184,0,0" Grid.RowSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" Height="32"/>
                <Button x:Name="RideCar_Button" Grid.Column="2" Content="RideCar(Km)" HorizontalAlignment="Left" Margin="90,223,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Height="32" Width="74" Click="RideCar_Button_Click"/>
                <TextBox x:Name="RideCar_TextBox" Grid.Column="2" HorizontalAlignment="Left" Margin="10,223,0,0" Grid.RowSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" Height="32"/>
                <Button x:Name="Reduel_Button" Grid.Column="2" Content="Refuel(L)" HorizontalAlignment="Left" Margin="90,262,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Height="32" Width="74" Click="Reduel_Button_Click"/>
                <TextBox x:Name="Refuel_TextBox" Grid.Column="2" HorizontalAlignment="Left" Margin="10,262,0,0" Grid.RowSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" Height="32"/>
                <Button x:Name="ToString_Button" Grid.Column="2" Content="ToString()" HorizontalAlignment="Left" Margin="10,301,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Height="32" Width="74" Click="ToString_Button_Click"/>
                <TextBox x:Name="ToString_TextBox" Grid.Column="2" HorizontalAlignment="Left" Margin="90,301,0,0" Grid.RowSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="322" Height="32"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
